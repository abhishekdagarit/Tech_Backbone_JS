%script{:id => 'index-template', :type => 'text/x-handlebars-template'}
  %form
    %fieldset
      %legend
        %h3
          Listing tasks
      .row

        %table
          %tr
            %th Title
            %th Body
            %th Due
            %th Complete
            %th
            %th
            %th


            -#- @tasks.each do |task|
            {{#each tasks}}
            %tr
              %td {{title}}
              %td {{body}}
              %td {{due}}
              %td {{complete}}
              %td
                .button.small.radius{:href  => '#', :class => "show" }  Show
                %a.button.small.radius{:href  => '#/tasks/edit/{{_id}}', :class => "edit" }  Edit
                .button.small.radius{:href  => '#', :id => '{{_id}}', :class => "delete" }  Delete
            {{/each}}
  %br

  %fieldset
    %legend
      %h3
        Task:
    .field
      = label_tag :title

      %br
      = text_field_tag :title
    .field
      = label_tag :body
      %br
      = text_area_tag :body
    .field.two
      = label_tag :due
      %br
      = text_field_tag :due
    .field
      = label_tag :complete
      %br
      = check_box_tag :complete
    .actions
      = submit_tag 'Create Task', :class => 'button radius', :id => 'submit'